{
  "compileOnSave": true,
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rules": {
    "no-empty": false,
    "no-return-await": false,
    "indent": [
      true,
      "spaces",
      2
    ],
    "interface-name": false,
    "no-consecutive-blank-lines": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "quotemark": [
      true,
      "single"
    ],
    "no-console": false,
    "trailing-comma": false,
    "whitespace": false,
    "arrow-parens": false,
    "member-ordering": false,
    "import-spacing": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "max-line-length": false,
    "prefer-const": false,
    "no-empty-interface": false,
    "prefer-for-of": false,
    "forin": false,
    "ban-types": false,
    "no-namespace": false,
    "no-shadowed-variable": false,
    "variable-name": false,
    "max-classes-per-file": false,
    "no-bitwise": false,
    "no-var-requires": false,
    "no-unused-expression": false,
    "semicolon": [
      true,
      "always"
    ]
  }
}